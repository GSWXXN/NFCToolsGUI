{
  "name": "nfctoolsgui",
  "productName": "NFCToolsGUI",
  "version": "1.0.0",
  "description": "NFCToolsGUI is an Electron-based cross-platform software that interact with PN532. It supports Windows, Linux, and macOS.",
  "main": "src/main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "license": "AGPL-3.0",
  "config": {
    "forge": {
      "packagerConfig": {
        "packageManager": "npm",
        "icon": "src/icons/icon",
        "asar": true,
        "overwrite": true,
        "ignore": [
          "source",
          "compile.sh",
          "framework",
          "README*",
          "LICENSE",
          "doc",
          "dict.dic",
          ".gitignore",
          ".gitsubmodules",
          ".idea",
          ".vscode"
        ],
        "extraResource": [
          "framework",
          "dict.dic"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "linux",
            "win32"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "serialport": "^10.5.0"
  },
  "devDependencies": {
    "node-abi": "^3.33.0",
    "@electron-forge/cli": "^6.0.4",
    "@electron-forge/maker-zip": "^6.0.4",
    "electron": "23.1.1"
  }
}
